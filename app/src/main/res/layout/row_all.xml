<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:background="#F6F4F4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="2dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPhone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/phone_icon"
                android:layout_height="150dp">

            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:paddingBottom="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBrandAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcd"
                        android:textSize="15dp"
                        android:textColor="@android:color/black">

                    </TextView>

                    <TextView
                        android:id="@+id/txtModelAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcd"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:textColor="@android:color/black">

                    </TextView>

                    <TextView
                        android:id="@+id/txtGBAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abcd"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:textColor="@android:color/black">

                    </TextView>

                </LinearLayout>


                <TextView
                    android:id="@+id/txtPriceAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abcd"
                    android:textSize="15dp"
                    android:textColor="@android:color/black">

                </TextView>

                <TextView
                    android:id="@+id/txtCategoryAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abcd"
                    android:textSize="15dp"
                    android:textColor="@android:color/black">

                </TextView>

                <TextView
                    android:id="@+id/txtNameAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="absacd"
                    android:textSize="15dp"
                    android:textColor="@android:color/black">

                </TextView>

                <TextView
                    android:id="@+id/txtBarcodeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="absacd"
                    android:textSize="15dp"
                    android:textColor="@android:color/black">

                </TextView>

                <Button
                    android:id="@+id/scanButtonAll"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/loginbuttonshape"
                    android:text="Scan"

                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>