<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:background="#F6F4F4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:cardCornerRadius="2dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPhone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/phone_icon"
                android:layout_height="150dp">

            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:paddingBottom="2dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBrandFailQC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samsung"
                        android:textSize="15dp"
                        android:textColor="@android:color/black">

                    </TextView>

                    <TextView
                        android:id="@+id/txtModelFailQC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S9"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:textColor="@android:color/black">

                    </TextView>

                    <TextView
                        android:id="@+id/txtGBFailQC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32GB"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:textColor="@android:color/black">

                    </TextView>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtCategoryFailQC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dealer Purchase"
                    android:textSize="15dp"
                    android:textColor="@android:color/black">

                </TextView>

                <TextView
                    android:id="@+id/txtNameFailQC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchased by Salman Ali"
                    android:textSize="15dp"
                    android:textColor="@android:color/black">

                </TextView>

                <TextView
                    android:id="@+id/txtBarcodeFailQC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1236547890"
                    android:textSize="15dp"
                    android:textColor="@android:color/black">

                </TextView>



                <Button
                    android:id="@+id/submitButtonFailQC"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/loginbuttonshape"
                    android:text="QC Pass"

                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>