<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPhone"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/phone_icon">

            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBrandOpenBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samsung"
                        android:textColor="@android:color/black"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/txtModelOpenBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="S9"
                        android:textColor="@android:color/black"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/txtGBOpenBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="32GB"
                        android:textColor="@android:color/black"
                        android:textSize="15dp">

                    </TextView>

                </LinearLayout>


                <TextView
                    android:id="@+id/txtCategoryOpenBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dealer Purchase"
                    android:textColor="@android:color/black"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/txtNameOpenBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Purchased by Salman Ali"
                    android:textColor="@android:color/black"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/txtBarcodeOpenBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1236547890"
                    android:textColor="@android:color/black"
                    android:textSize="15dp">

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/selectOpenBox"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/loginbuttonshape"
                        android:text="Upload"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"

                        />

                    <Button
                        android:id="@+id/submitOpenBox"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/loginbuttonshape"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"

                        />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


</androidx.cardview.widget.CardView>